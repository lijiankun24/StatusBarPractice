<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?attr/actionBarSize"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_dimming"
            style="@style/ButtonStyle"
            android:text="Dimming the System Bars"/>

        <View style="@style/LineStyle"/>

        <Button
            android:id="@+id/btn_hiding_statusbar"
            style="@style/ButtonStyle"
            android:text="Hiding the Status Bar"/>

        <View style="@style/LineStyle"/>

        <Button
            android:id="@+id/btn_hiding_navigation"
            style="@style/ButtonStyle"
            android:text="Hiding the Navigation Bar"/>

        <View style="@style/LineStyle"/>

        <Button
            android:id="@+id/btn_immersive"
            style="@style/ButtonStyle"
            android:text="Using Immersive Full-Screen Mode"/>

        <View style="@style/LineStyle"/>

        <Button
            android:id="@+id/btn_responding"
            style="@style/ButtonStyle"
            android:text="Responding to UI Visibility Changes"/>

        <View style="@style/LineStyle"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

